{
  "name": "lightningjs",
  "version": "0.1.0",
  "description": "lightningjs",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint '**/*.js'"
  },
  "devDependencies": {
    "vite": "5.4.8",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.11.1",
    "eslint": "9.11.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "globals": "15.9.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "vitest": "^1.6.0",
    "jsdom": "^24.0.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/user-event": "^14.5.2"
  },
  "dependencies": {
    "@lightningjs/blits": "1.29.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "vitest": {
    "environment": "jsdom",
    "coverage": {
      "provider": "v8",
      "reportsDirectory": "./coverage",
      "reporter": ["text", "html"],
      "exclude": ["docs/**", "index.html"]
    }
  }
}
